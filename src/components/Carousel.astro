--- 
import filmData from '../data/film.json'; 

const films = filmData; 
--- 

<div class="carousel">
    {films.map(film => (
        <div class="carousel-item">
            <img src={film.Images[0]} alt={film.Title} class="carousel-image"/>
            <div class="carousel-info">
                <h3>{film.Title} ({film.Year})</h3>
                <p>{film.Plot}</p>
            </div>
        </div>
    ))}
</div>

<style>
    .carousel {
        display: flex;
        overflow-x: scroll;
        gap: 16px;
    }
    .carousel-item {
        flex: 0 0 auto;
        width: 300px;
    }
    .carousel-image {
        width: 100%;
        height: auto;
        border-radius: 8px;
    }
    .carousel-info {
        padding: 8px;
        background-color: rgba(0, 0, 0, 0.6);
        color: #fff;
        border-radius: 8px;
    }
</style>
